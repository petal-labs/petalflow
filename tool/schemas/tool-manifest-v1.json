{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://petalflow.dev/schemas/tool-manifest/v1.json",
  "title": "PetalFlow Tool Manifest v1.0",
  "type": "object",
  "required": [
    "manifest_version",
    "tool",
    "transport",
    "actions"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "manifest_version": {
      "type": "string",
      "const": "1.0"
    },
    "tool": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "homepage": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "transport": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "native",
            "http",
            "stdio",
            "mcp"
          ]
        },
        "endpoint": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "mode": {
          "type": "string",
          "enum": [
            "stdio",
            "sse"
          ]
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 0
        },
        "retry": {
          "type": "object",
          "properties": {
            "max_attempts": {
              "type": "integer",
              "minimum": 0
            },
            "backoff_ms": {
              "type": "integer",
              "minimum": 0
            },
            "retryable_codes": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/action"
      }
    },
    "config": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/field"
      }
    },
    "health": {
      "type": "object",
      "properties": {
        "endpoint": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "interval_seconds": {
          "type": "integer",
          "minimum": 0
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 0
        },
        "unhealthy_threshold": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    }
  },
  "definitions": {
    "action": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "inputs": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/field"
          }
        },
        "outputs": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/field"
          }
        },
        "idempotent": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "field": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "string",
            "integer",
            "float",
            "boolean",
            "bytes",
            "array",
            "object",
            "any"
          ]
        },
        "required": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "default": {},
        "sensitive": {
          "type": "boolean"
        },
        "items": {
          "$ref": "#/definitions/field"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/field"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
